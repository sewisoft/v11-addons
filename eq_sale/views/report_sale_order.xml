<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="eq_report_saleorder_document">
            <t t-if="company.external_report_layout == 'equitania'">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
                        <div class="page" style="color: #000 !important;font-size: 11px!important;font-family: 'Open Sans', Calibri,'Helvetica Neue', Helvetica, Arial, sans-serif;padding-left:1cm;padding-right:0cm;">
                            <div class="oe_structure"/>
                            <t t-set="currency_sign" t-value="doc.pricelist_id.currency_id.symbol"/>
                            <t t-set="eq_saleorder_extension_address_header">
                                <div id="address" class="col-xs-7 leftbox">
                                    <p style="color:#000000;font-size: 9px!important;border-bottom: 1px solid #000000;padding-top:1cm;margin-bottom:0.6em;display: inline-block;white-space: nowrap;">
                                        <h t-field="doc.company_id.partner_id.name"/>
                                        <span>-</span>
                                        <h t-field="doc.company_id.partner_id.street"/>
                                        <h t-if="doc.company_id.partner_id.eq_house_no">
                                            <h t-field="doc.company_id.partner_id.eq_house_no" />
                                        </h>
                                        <span>-</span>
                                        <h t-field="doc.company_id.partner_id.zip"/>
                                        <span>
                                        </span>
                                        <h t-field="doc.company_id.partner_id.city"/>
                                        <h t-if="doc.company_id.partner_id.country_id.name != doc.partner_id.country_id.name" t-field="doc.company_id.partner_id.country_id.name"/>
                                    </p>
                                    <t t-if="doc.partner_id.parent_id">
                                        <div t-field="doc.partner_id.parent_id.name" style="clear:left;"/>
                                    </t>
                                    <div  style="clear:left;">
                                        <h t-if="doc.partner_id.title.name" t-field="doc.partner_id.title.name"  />
                                        <h t-if="doc.partner_id.eq_firstname" t-field="doc.partner_id.eq_firstname" />
                                        <h t-field="doc.partner_id.name" />
                                    </div>
                                    <div t-if="doc.partner_id.eq_name2" style="clear:left;">
                                        <div t-field="doc.partner_id.eq_name2"/>
                                    </div>
                                    <div style="clear:left;">
                                        <span t-field="doc.partner_id.street"/>
                                        <h t-if="doc.partner_id.eq_house_no">
                                            <span t-field="doc.partner_id.eq_house_no" />
                                        </h>
                                    </div>
                                    <div t-if="doc.partner_id.street2">
                                        <div t-field="doc.partner_id.street2"/>
                                    </div>
                                    <h>
                                        <span t-field="doc.partner_id.zip"/>
                                        <span t-field="doc.partner_id.city"/>
                                        <h t-if="doc.partner_id.eq_citypart">
                                            -
                                            <h t-field="doc.partner_id.eq_citypart" />
                                        </h>
                                    </h>
                                    <div t-field="doc.partner_id.country_id.name"/>
                                </div>
                            </t>
                            <t t-set="eq_saleorder_extension_right_header">
                                <div class="col-xs-5 rightbox">
                                    <table style="width:100%;float:right; font-size: 0.8em;">
                                        <tbody>
                                            <tr t-if="doc.partner_id.customer_number">
                                                <td>
                                                    <span>Customer no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.partner_id.customer_number"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.client_order_ref">
                                                <td>
                                                    <span>Your reference no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.client_order_ref"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.origin">
                                                <td>
                                                    <span>Our reference no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.origin" />
                                                </td>
                                            </tr>
                                            <tr t-if="doc.name">
                                                <td t-if="doc.state not in ['draft','sent']">
                                                    <span>Order no.</span>
                                                </td>
                                                <td t-if="doc.state in ['draft','sent']">
                                                    <span>Quotation no.</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.name"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.date_order">
                                                <td t-if="doc.state not in ['draft','sent']">
                                                    <span>Order date</span>
                                                </td>
                                                <td t-if="doc.state in ['draft','sent']">
                                                    <span>Quotation date</span>
                                                </td>
                                                <td class="text-right">
                                                    <span
										                t-esc="doc.date_order.split(' ')[0].split('-')[2] + '.' + doc.date_order.split(' ')[0].split('-')[1] + '.' + doc.date_order.split(' ')[0].split('-')[0]" />
                                                </td>
                                            </tr>
                                            <tr t-if="doc.validity_date and doc.state in ['draft','sent']">
                                                <td id="sale_header_placeholder">
                                                    <span>Offer valid until</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.validity_date"/>
                                                </td>
                                            </tr>
                                            <t t-if="doc.fiscal_position_id.name == 'Kunde EU Unternehmen (mit USt-ID)' or doc.fiscal_position_id.name == 'Kunde EU Unternehmen (mit USt-ID) - SKR03' or doc.fiscal_position_id.name == 'Kunde EU Unternehmen (mit USt-ID) - SKR04'">
                                                <tr t-if="doc.partner_id.vat">
                                                    <td>
                                                        <span>VAT Reg. no.</span>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="doc.partner_id.vat"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <h style="line-height:3em;" t-if="doc.user_id">
                                        <strong>For further information, please contact</strong>
                                    </h>
                                    <table style="width:100%; font-size: 0.8em;" t-if="doc.user_id">
                                        <tbody>
                                            <tr t-if="doc.user_id.name">
                                                <td>
                                                    <span>Contact person</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.eq_firstname"/> <span t-field="doc.user_id.name"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.user_id.phone">
                                                <td>
                                                    <span>Phone</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.phone"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.user_id.email">
                                                <td>
                                                    <span>E-Mail</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="doc.user_id.email"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </t>

                            <!-- Positionen -->
                            <t t-set="table_header">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Pos.</strong>
                                        </th>
                                        <th>
                                            <strong>Item no.</strong>
                                        </th>
                                        <th>
                                            <strong>Item description</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Qty.</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Unit</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Unit price</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>VAT</strong>
                                        </th>
                                        <th t-if="any([line.discount for line in doc.order_line])"
                                            class="text-right">
                                            <strong>Discount (%)</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Net price</strong>
                                        </th>
                                    </tr>
                                </thead>
                            </t>
                            <t t-set="page_break">
                                <![CDATA[
                                    </tbody>
                                    </table>
                                ]]>
                                <div style="page-break-before:always;">
                                </div>
                                <h2 style="margin-bottom:25px; margin-top:25px">
                                    <span/>
                                </h2>
                                <div class="col-xs-12" style="margin-top: 0em; margin-bottom: 0em; margin-left: 0px; padding-left: 0px;">
                                    <div>
                                        <span/>
                                    </div>
                                </div>
                                <![CDATA[
                                    <table class="table table-condensed table-row">
                                ]]>
                                <t t-raw="table_header"/>
                                <![CDATA[
                                    <tbody class="sale_tbody">
                                ]]>
                            </t>
                            <div class="row">
                                <t t-raw="eq_saleorder_extension_address_header"/>
                                <t t-raw="eq_saleorder_extension_right_header"/>
                            </div>
                            <div style="margin-bottom:25px; margin-top:25px; font-size: 1.7em;">
                                <t t-if="doc.state not in ['draft','sent']">
                                    <span>Sale order</span>
                                </t>
                                <t t-if="doc.state in ['draft','sent']"><span>Quotation</span></t>
                                <span t-field="doc.name"/>
                            </div>

                            <div t-if="doc.html_text_is_set(doc.eq_head_text)" class="eq_headertext">
                                <p t-field="doc.eq_head_text"/>
                            </div>

                            <!-- Pagebreak after headertext -->
                            <p t-if="doc.eq_use_page_break_after_header" style="page-break-after:always;"> </p>

                            <!-- Is there a discount on at least one line? -->
                            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                            <t t-foreach="doc.order_lines_layouted()" t-as="page">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th><strong>Pos.</strong></th>
                                            <th><strong>Item no.</strong></th>
                                            <th><strong>Item description</strong></th>
                                            <th class="text-right"><strong>Qty.</strong></th>
                                            <!--<th class="text-right" groups="product.group_uom"><strong>Unit</strong></th>-->
                                            <th class="text-right"><strong>Unit price</strong></th>
                                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line"><strong>Discount (%)</strong></th>
                                            <th class="text-right"><strong>VAT</strong></th>
                                            <th class="text-right" groups="sale.group_show_price_subtotal"><strong>Net price</strong></th>
                                            <th class="text-right price_tax_included" groups="sale.group_show_price_total"><strong>Total Price</strong></th>
                                        </tr>
                                   </thead>
                                   <tbody class="sale_tbody">
                                        <t t-set="pos" t-value="1"/>
                                        <t t-foreach="page" t-as="layout_category">
                                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                                <tr class="active">
                                                    <td colspan="10" style="font-weight: bold; border-bottom: 1px solid black; border-top:0px;">
                                                        <!--<t t-esc="layout_category['name']"/>-->
                                                        <t t-if="layout_category['name'] == 'Uncategorized'">Others</t>
                                                        <t t-if="layout_category['name'] != 'Uncategorized'"><t t-esc="layout_category['name']"/></t>
                                                    </td>
                                                </tr>
                                            </t>

                                            <!-- Lines associated -->
                                            <t t-foreach="layout_category['lines']" t-as="l">
                                                <tr>
                                                    <td><span t-esc="pos"/></td>
                                                    <td><span t-field="l.product_id.default_code" /></td>
                                                    <td>
                                                        <strong>
                                                            <span t-field="l.product_id.name"/>
                                                        </strong>
                                                        <br/><span t-field="l.name"/>
                                                        <t id="eq_drawing_number" />
                                                            <t t-if="l.eq_delivery_date">
                                                                <div class="clearfix"></div>
                                                                Delivery date:
                                                                    <span t-field="l.eq_delivery_date" />
                                                            </t>
                                                        <div id="agreement_id"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="l.product_uom_qty"/>
                                                        <span t-field="l.product_uom"  groups="product.group_uom" />
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="l.price_unit" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                                        <span t-field="l.discount"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                                    </td>
                                                    <td class="text-right" groups="sale.group_show_price_subtotal">
                                                        <!-- optionale Position -->
                                                        <t t-if="l.eq_optional">(<span style="font-style:italic;" t-field="l.price_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>)
                                                        </t>
                                                        <!-- normale Position -->
                                                        <t t-if="not l.eq_optional"><span t-field="l.price_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>

                                                            <t t-set="pos" t-value="pos + 1"/>
                                                        </t>
                                                    </td>
                                                    <td class="text-right" groups="sale.group_show_price_total">
                                                        <span t-field="l.price_total"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>

                                            <!-- Zwischensummer der Kategorie - hier wird die optionale Position ignoriert -->
                                            <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                                <tr class="text-right">
                                                    <td colspan="10">
                                                        <strong>Subtotal: </strong>
                                                        <t t-set="total_category_sum" t-value="doc.get_sum_without_optional_positions(layout_category['lines'])"></t>
                                                        <span t-esc="total_category_sum" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                                <tr class="text-center">
                                                    <td colspan="100" style="border-top:0px;">
                                                        <br/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                                    <p style="page-break-before:always;"> </p>
                                </t>
                            </t>


                            <div>
                                <div name="total">
                                    <div class="row" name="total">
                                        <div class="col-xs-5 pull-right">
                                            <table class="table table-condensed" style="page-break-inside:avoid !important;">
                                                <tr>
                                                    <td>Total without taxes</td>
                                                    <td class="text-right">
                                                        <span t-field="doc.amount_untaxed"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Tax</td>
                                                    <td class="text-right">
                                                        <span t-field="doc.amount_tax"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr class="border-black">
                                                    <td><strong>Total sum</strong></td>
                                                    <td class="text-right">
                                                        <strong>
                                                            <span t-field="doc.amount_total"
                                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                        </strong>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pagebreak before footertext -->
                                <p t-if="doc.eq_use_page_break_before_footer" style="page-break-after:always;"> </p>

                                <div t-if="doc.html_text_is_set(doc.note)"  class="eq_footertext" style="width:100%;float:left; display:block;page-break-inside:avoid !important;" >
                                    <p t-field="doc.note" style="margin-bottom:3em;"/>
                                </div>

                                    <table class="col-xs-3"
                                           style="width:auto!important; ">
                                        <tbody>
                                            <tr t-if="doc.payment_term_id">
                                                <td style="padding-right:0.5cm;">
                                                    <strong>Term of payment:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="doc.payment_term_id.note"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.eq_delivery_condition_id">
                                                <td style="padding-right:0.5cm;">
                                                    <strong>Delivery Condition:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="doc.eq_delivery_condition_id"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.carrier_id.name">
                                                <td style="padding-right:0.5cm;">
                                                    <strong>Delivery Method:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="doc.carrier_id.name"/>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.incoterm">
                                                <td style="padding-right:0.5cm;">
                                                    <strong>Incoterm:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="doc.incoterm.name"/>
                                                </td>
                                            </tr>
                                            <tr
                                                    t-if="doc.partner_invoice_id != doc.partner_id and doc.partner_invoice_id != False">
                                                <td style="padding-right:0.5cm; font-weight:bold;padding-top:0.5cm;" valign="top">
                                                    <strong>Invoice address:</strong>
                                                </td>
                                                <td style="padding-top:0.5cm;">
                                                    <div>
                                                        <!-- falls es einen übergeordneten Partner gibt, dann dessen Namen ausgeben -->
                                                        <t t-if="doc.partner_invoice_id.parent_id">
                                                            <div t-field="doc.partner_invoice_id.parent_id.name" style="clear:left;"/>
                                                        </t>
                                                        <div  style="clear:left;">
                                                            <h t-if="doc.partner_invoice_id.title.name" t-field="doc.partner_invoice_id.title.name"  />
                                                            <h t-if="doc.partner_invoice_id.eq_firstname" t-field="doc.partner_invoice_id.eq_firstname" />
                                                            <h t-field="doc.partner_invoice_id.name" />
                                                        </div>
                                                        <div t-if="doc.partner_invoice_id.eq_name2" style="clear:left;">
                                                            <div t-field="doc.partner_invoice_id.eq_name2"/>
                                                        </div>
                                                        <div style="clear:left;">
                                                            <span t-field="doc.partner_invoice_id.street"/>
                                                            <h t-if="doc.partner_invoice_id.eq_house_no">
                                                                <span t-field="doc.partner_invoice_id.eq_house_no" />
                                                            </h>
                                                        </div>
                                                        <div t-if="doc.partner_invoice_id.street2">
                                                            <div t-field="doc.partner_invoice_id.street2"/>
                                                        </div>
                                                        <h>
                                                            <h t-field="doc.partner_invoice_id.zip"/>
                                                            <h t-field="doc.partner_invoice_id.city"/>
                                                            <h t-if="doc.partner_invoice_id.eq_citypart">
                                                                -
                                                                <h t-field="doc.partner_invoice_id.eq_citypart" />
                                                            </h>
                                                        </h>
                                                        <div t-field="doc.partner_invoice_id.country_id.name"/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr t-if="doc.partner_shipping_id != doc.partner_id and doc.partner_shipping_id != False">
                                                <td style="padding-right:0.5cm; font-weight:bold;padding-top:0.5cm;" valign="top">
                                                    Shipping address:
                                                </td>
                                                <td style="padding-top:0.5cm;">
                                                    <div>
                                                        <t t-if="doc.partner_shipping_id.parent_id">
                                                            <div t-field="doc.partner_shipping_id.parent_id.name" style="clear:left;"/>
                                                        </t>
                                                        <div  style="clear:left;">
                                                            <h t-if="doc.partner_shipping_id.title.name" t-field="doc.partner_shipping_id.title.name"  />
                                                            <h t-if="doc.partner_shipping_id.eq_firstname" t-field="doc.partner_shipping_id.eq_firstname" />
                                                            <h t-field="doc.partner_shipping_id.name" />
                                                        </div>
                                                        <div t-if="doc.partner_shipping_id.eq_name2" style="clear:left;">
                                                            <div t-field="doc.partner_shipping_id.eq_name2"/>
                                                        </div>
                                                        <div style="clear:left;">
                                                            <span t-field="doc.partner_shipping_id.street"/>
                                                            <h t-if="doc.partner_shipping_id.eq_house_no">
                                                                <span t-field="doc.partner_shipping_id.eq_house_no" />
                                                            </h>
                                                        </div>
                                                        <div t-if="doc.partner_shipping_id.street2">
                                                            <div t-field="doc.partner_shipping_id.street2"/>
                                                        </div>
                                                        <div t-if="doc.partner_shipping_id.street2">
                                                            <div t-field="doc.partner_shipping_id.street2"/>
                                                        </div>
                                                        <h>
                                                            <h t-field="doc.partner_shipping_id.zip"/>
                                                            <h t-field="doc.partner_shipping_id.city"/>
                                                            <h t-if="doc.partner_shipping_id.eq_citypart">
                                                                -
                                                                <h t-field="doc.partner_shipping_id.eq_citypart" />
                                                            </h>
                                                        </h>
                                                        <div t-field="doc.partner_shipping_id.country_id.name"/>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                <div></div>
                            </div>
                            <div id="informations" style="display:none;"></div>
                            <p id="fiscal_position_remark"></p>
                            <div name="payment_term"></div>
                            <div class="oe_structure"/>
                        </div>
                </t>
            </t>
        </template>

        <template id="eq_delete_standard_incoterm" inherit_id="sale_stock.report_saleorder_document_inherit_sale_stock" >
            <xpath expr="//div[@t-if='doc.incoterm']" position="replace">
                <!-- Überschreibt die Standard incoterm Positionierung -->
            </xpath>
        </template>

        <template id="report_saleorder" inherit_id="sale.report_saleorder">
            <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-if="doc and 'company_id' in doc">
                        <t t-set="company" t-value="doc.company_id.sudo()"/>
                    </t>
                    <t t-if="not doc or not 'company_id' in doc">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                    <t t-if="company.external_report_layout == 'equitania'">
