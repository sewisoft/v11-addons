<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_account_config_settings">
            <field name="name">pragma_person_auto_account_creation.view_account_config_settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='recommended_apps']" position="after">
                    <h2 >Automatic creation (customer account, vendor account, customer number, vendor number...)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="default_auto_create"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string='Activate automatic creation'/>
                                <div class="content-group" attrs="{'invisible': [('default_auto_create', '=', False)]}">
                                    <div class="mt16">
                                        <div name="default_auto_customer_ref">
                                            <field name="default_auto_customer_ref" class="oe_inline"/>
                                            <label for="default_auto_customer_ref" string="Activating Automatic Customer Numbers"/>
                                            <div name="auto_customer_ref_by_account" attrs="{'invisible': [('default_auto_customer_ref', '=', False)]}">
                                                <field name="auto_customer_ref_by_account" class="oe_inline"/>
                                                <label for="auto_customer_ref_by_account" string="Customer number = Customer account"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt16">
                                         <div name="default_auto_supplier_ref">
                                            <field name="default_auto_supplier_ref" class="oe_inline"/>
                                            <label for="default_auto_supplier_ref"
                                                   string="Activating Automatic Supplier Numbers"/>
                                            <div name="auto_supplier_ref_by_account" attrs="{'invisible': [('default_auto_supplier_ref', '=', False)]}">
                                                <field name="auto_supplier_ref_by_account" class="oe_inline"/>
                                                <label for="auto_supplier_ref_by_account" string="Vendor number = vendor account"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div name="receivable_parent_id" class="mt16">
                                        <label for="receivable_parent_id" string="Customer master account"/>
                                        <field name="receivable_parent_id" domain="[('user_type_id.type', '=', 'receivable')]"
                                               string="Customer master account" class="oe_inline"/>
                                    </div>
                                    <div name="payable_parent_id" class="mt16">
                                        <label for="payable_parent_id" string="Vendors upper account"/>
                                        <field name="payable_parent_id" domain="[('user_type_id.type', '=', 'payable')]"
                                               string="Vendors upper account" class="oe_inline"/>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>